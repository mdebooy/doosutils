  <groupId>eu.debooy.doosutils</groupId>
  <artifactId>doosutils</artifactId>
  <packaging>pom</packaging>
  <version>1.0.4-SNAPSHOT</version>
  <name>Utility classes voor DOOS Applicaties</name>
  <description>Utility classes voor DOOS Applicaties.</description>
  <inceptionYear>2009</inceptionYear>
  <scm>
    <developerConnection>scm:svn:http://svn.debooy.eu/svn/doosutils/trunk</developerConnection>
    <connection>scm:svn:http://svn.debooy.eu/svn/doosutils/trunk</connection>
  </scm>

  <modules>
    <module>doosutils-components</module>
    <module>doosutils-core</module>
    <module>doosutils-file</module>
    <module>doosutils-hibernate</module>
    <module>doosutils-html</module>
    <module>doosutils-latex</module>
    <module>doosutils-test</module>
    <module>doosutils-util</module>
    <module>doosutils-web</module>
  </modules>

  <developers>
    <developer>
      <name>Marco de Booij</name>
      <id>booymar</id>
      <email>marco.developer@debooy.eu</email>
      <organization>DOOS</organization>
      <roles>
        <role>Project Manager</role>
        <role>Java Developer</role>
      </roles>
    </developer>
  </developers>

  <distributionManagement>
    <site>
      <id>Documentatie</id>
      <name>DOOS Documentatie</name>
      <url>scp://intra.debooy.eu/var/www/site/DOOS-Utils</url>
    </site>
  </distributionManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.1.1</version>
      <optional>true</optional>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>1.5.8</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>commons-lang</groupId>
        <artifactId>commons-lang</artifactId>
        <version>2.4</version>
      </dependency>
   </dependencies>
 </dependencyManagement>
